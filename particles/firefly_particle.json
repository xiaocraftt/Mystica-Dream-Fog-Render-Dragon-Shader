{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "mystica:firefly",
      "basic_render_parameters": {
        "material": "particles_additive",
        "texture": "textures/particle/pixel"
      }
    },
    "components": {

      "minecraft:emitter_initialization": {
        "creation_expression": "v.ax = math.random(-0.6, 0.6); v.ay = math.random(0.1, 0.6); v.az = math.random(-0.6, 0.6);",
        "per_update_expression": "v.change = math.random(0,1) < 0.02; v.change ? (v.ax = math.random(-0.6,0.6)); v.change ? (v.ay = math.random(0.1,0.6)); v.change ? (v.az = math.random(-0.6,0.6));"
      },

      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },

      "minecraft:emitter_lifetime_once": {
        "active_time": 1
      },

      "minecraft:emitter_shape_point": {},

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(12, 20)"
      },

      "minecraft:particle_initial_speed": 0.035,

      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": ["v.ax", "v.ay", "v.az"],
        "linear_drag_coefficient": 4
      },

      "minecraft:particle_motion_collision": {
        "enabled": false
      },

      "minecraft:particle_appearance_billboard": {
        "size": {
          "interpolant": "v.particle_age / v.particle_lifetime",
          "gradient": {
            "0.0": [0.04, 0.04],
            "0.3": [0.09, 0.09],
            "0.6": [0.11, 0.11],
            "1.0": [0.05, 0.05]
          }
        },
        "facing_camera_mode": "lookat_xyz"
      },

      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "v.particle_age / v.particle_lifetime",
          "gradient": {
            "0.0": "#00E6FF00",
            "0.25": "#FFC2FFCC",
            "0.5": "#FFD6FFFF",
            "0.75": "#FFC2FFCC",
            "1.0": "#00E6FF00"
          }
        }
      }
    }
  }
}
